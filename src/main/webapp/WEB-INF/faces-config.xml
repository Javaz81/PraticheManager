<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
<application>
    <action-listener>
        org.primefaces.application.DialogActionListener
    </action-listener>
    <navigation-handler>
        org.primefaces.application.DialogNavigationHandler
    </navigation-handler>
    <view-handler>
        org.primefaces.application.DialogViewHandler
    </view-handler>    
        <resource-bundle>
            <base-name>/Bundle</base-name>
            <var>bundle</var>
        </resource-bundle>
    </application>
    <managed-bean>
        <description>Used to validate search form in main search panel</description>
        <managed-bean-name>searchValidationView</managed-bean-name>
        <managed-bean-class>com.javasoft81.pratichemanager.jsf.beans.SearchValidationView</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Bean per la gestione della visualizzazione del search degli autoarticolati e per l'apertura delle relative pratiche</description>
        <managed-bean-name>veicoliSearchView</managed-bean-name>
        <managed-bean-class>com.javasoft81.pratichemanager.jsf.beans.VeicoliSearchView</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
        <managed-property>
            <property-name>lavoriManagerBean</property-name>
            <property-class>com.javasoft81.pratichemanager.jsf.beans.LavoriManagerBean</property-class>
            <value>#{lavoriManagerBean}</value>            
        </managed-property>
        <managed-property>
            <property-name>materialiManagerBean</property-name>
            <property-class>com.javasoft81.pratichemanager.jsf.beans.MaterialiManagerBean</property-class>
            <value>#{materialiManagerBean}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <description>E' il bean che si occupa di preparare e far utilizzare all'applicazione l'anagrafica di tutti i lavori 
( sia standard e custom) per categoria associata.</description>
        <managed-bean-name>lavoriManagerBean</managed-bean-name>
        <managed-bean-class>com.javasoft81.pratichemanager.jsf.beans.LavoriManagerBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Bean che gestisce gli accessi ai materiali delle varie pratiche.</description>
        <managed-bean-name>materialiManagerBean</managed-bean-name>
        <managed-bean-class>com.javasoft81.pratichemanager.jsf.beans.MaterialiManagerBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Bean per la selezione dei lavori standard</description>
        <managed-bean-name>lavoriStandardDialog</managed-bean-name>
        <managed-bean-class>com.javasoft81.pratichemanager.jsf.beans.utils.LavoriStandardDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Bean che  permette la creazione di lavori custom.</description>
        <managed-bean-name>lavoriCustomDialog</managed-bean-name>
        <managed-bean-class>com.javasoft81.pratichemanager.jsf.beans.utils.LavoriCustomDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Bean che gestisce l'aggiunta o la rimozione di materiale associato alla pratica.</description>
        <managed-bean-name>materialiDialog</managed-bean-name>
        <managed-bean-class>com.javasoft81.pratichemanager.jsf.beans.utils.MaterialiDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>E' il bean che gestisce la modifica ai dati di una pratica.</description>
        <managed-bean-name>generalePraticaDialog</managed-bean-name>
        <managed-bean-class>com.javasoft81.pratichemanager.jsf.beans.utils.GeneralePraticaDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>E' la dialog per la ricerca dei veicoli</description>
        <managed-bean-name>searchVeicoliDialog</managed-bean-name>
        <managed-bean-class>com.javasoft81.pratichemanager.jsf.beans.utils.SearchVeicoliDialog</managed-bean-class>    
        <managed-bean-scope>view</managed-bean-scope></managed-bean>
    <managed-bean>
        <description>Bean per l'editing dei valori del veicolo</description>
        <managed-bean-name>veicoloEditDialog</managed-bean-name>
        <managed-bean-class>com.javasoft81.pratichemanager.jsf.beans.utils.VeicoloEditDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <description>Bean che modifica i dati del cliente associati alla pratica.</description>
        <managed-bean-name>clienteEditDialog</managed-bean-name>
        <managed-bean-class>com.javasoft81.pratichemanager.jsf.beans.utils.ClienteEditDialog</managed-bean-class>
        <managed-bean-scope>view</managed-bean-scope>
    </managed-bean>
</faces-config>
